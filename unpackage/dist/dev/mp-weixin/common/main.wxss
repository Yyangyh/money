
page{
	height: 100%;
	background: #2D3463;
}
.form{
	padding: 0 30rpx;
	margin-top: 80rpx;
}
.form_ipt{
	background: #3B4374;
	height: 90rpx;
	padding-left: 20rpx;
	border-radius: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.form_ipt text{
	color: #B8C6E0;
	display: inline-block;
	font-size: 32rpx;
	color: #E3E9FF;
}
.form_ipt input{
	display: inline-block;
	color: #fff;
	-webkit-box-flex: 2;
	-webkit-flex-grow: 2;
	    -ms-flex-positive: 2;
	        flex-grow: 2;
}
.uni-input-placeholder{
	color: #7988B3;
}
.form_btn{
	height: 90rpx;
}
.form_btn button{
	color: #fff;
	background: #74D1F8;
}

